generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt

  //posts     Post[]

  name      String 
  email     String @unique
  password  String
}

model Post {
  id        Int @id @default(autoincrement())
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt

  // disabled to test without User
  //user_id   Int
  //user      User @relation(fields: [user_id], references: [id], onDelete: Cascade) 

  title     String 
  desc      String 
  text      String 
  slug      String
}
